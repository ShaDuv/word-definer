<h1><%= @word.word %></h1>
<h2><%= @word.definition %></h2>

<form action="/word/<%= @word.id %>" method="post">
  <div class="form-group">
    <label for="message_header">Add Your Definition</label>
    <br>
    <textarea id="kdef" name="kdef" class="form-control" type="text" rows="5" cols="60">
    </textarea>
  </div>
  <button type="submit" class="btn">Add definition!</button>
</form>

<% if @board.messages.any? %>
<ul>
  <% @board.messages.each do |message| %>
    <li><a href="/message/<%= message.id %>"><%= message.header %>
    </a><%= message.timestamp %></li>
<% end %>
  </ul>
<% else %>
  <p>It's lonely in here. Be the first to post a message.</p>
<% end %>
