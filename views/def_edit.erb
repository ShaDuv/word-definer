<h1>Edit This Definition</h1>

<form action="/word/<%= @word.id %>/definition/<%= @kdef.id %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="name">Edit definition</label><br>
  <textarea id="name" name="definition" type="text" rows="10" cols="40">
    <%= @kdef.definition %>
</textarea><br>
<button type="submit" name="Save">Save Edits</button>
</form>

<form action= "/word/<%= @word.id %>/definition/<%= @kdef.id %>" method="post">
  <input name="_method" type="hidden" value="delete">
  <button type="submit" name="button">Delete</button>
</form>
